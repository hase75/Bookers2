<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'list', user: @user, book: @book %>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td><%= image_tag @user.get_profile_image(100,100) %></td>
                <td><%= @each_book.title %></td>
                <td><%= @each_book.body %></td>
              </tr>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</main>
