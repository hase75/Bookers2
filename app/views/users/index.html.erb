<h2>User info</h2>
 <h6>画像</h6>
  <%= image_tag @user.get_profile_image(100,100) %>
 <h6>name</h6>
  <%= @user.name %>
 <h6>introduction</h6>
  <%= @user.introduction %>


<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
 <h2>Users</h2>
  <% @users.each do |user| %>
  
   <p>タイトル</p>
   <span><%= user.name %></span>
   <p>画像</p>
   <% if user.image.attached? %>
    <%= image_tag user.image, size: "200x200" %>
   <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
   <% end %>
   
   
   
  <% end %>
   
  
  